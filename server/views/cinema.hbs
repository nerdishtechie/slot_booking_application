     <div class="container" style="display:flex;align-items:center;justify-content:center; margin-top:-50px">
        <div>
            <label style="font-weight:bolder; color:magenta">Select Cinema:</label>
            <select style="background-color:chartreuse" class="form-control" id="movie">
                {{#each movies}}
                <option style="font-weight:bolder;color:white" value="{{rate}}">{{name}}/screen{{screenNo}}- â‚¹{{rate}}</option>

                {{/each}}
            </select>
        </div>
        <ul class="showcase" style="list-style-type: none; margin: 50px; margin-top:100px;display:flex">
            <li style="text-align:center">
                <div class="seat" style="margin:15px"></div>

                <small style="font-weight:bolder;color:green">Available</small>

            </li>
            <li style="text-align:center">
                <div class="seat selected" style="margin:15px"></div>
                <small style="font-weight:bolder;color:blue">Selected</small>

            </li>
            <li style="text-align:center">
                <div class="seat occupied" style="margin:15px"></div>
                <small style="font-weight:bolder;color:red">Occupied</small>

            </li>


        </ul>
        <div  style="width:350px;margin-top:40px">
            <div class="screen"> </div>
            <div class="row" id="screen1" style="visibility:hidden; display:none">
                {{#each screen1}}
                <div class="seat {{status}}" id="{{seatno}}"></div>


                {{/each}}
            </div>
            <div class="row" id="screen2" style="visibility:hidden; display:none">
                {{#each screen2}}
                <div class="seat {{status}}" id="{{seatno}}"></div>
                {{/each}}
            </div>
            <div class="row" id="screen3" style="visibility:hidden; display:none">
                {{#each screen3}}
                <div class="seat {{status}}" id="{{seatno}}"></div>
                {{/each}}
            </div>
        </div>

    </div>
    <div id="finalCost" style="display:none; visibility:hidden; text-align:center">
        <p id="cost"></p>
    </div>

